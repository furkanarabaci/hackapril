{
  ".flLetter": {
    "height": 60,
    "width": 60,
    "&-label": {
      "width": null,
      "height": null,
      "flexProps": {
        "flexGrow": 1
      },
      "font": {
        "size": 40
      },
      "textAlignment": "MIDCENTER",
      "textColor": "${backgroundInverted}"
    },
    "backgroundColor": "${backgroundMain}",
    "&-wrapper": {
      "flexProps": {
        "flexGrow": 1
      },
      "height": 60,
      "width": 60,
      "borderColor": "${letterBorder}",
      "borderWidth": 2,
      ".success": {
        "borderWidth": 0,
        "backgroundColor": "${backgroundSuccess}"
      },
      ".hint": {
        "borderWidth": 0,
        "backgroundColor": "${backgroundHint}"
      },
      ".fail": {
        "borderWidth": 0,
        "backgroundColor": "${backgroundFail}"
      },
      ".default": {
        "borderWidth": 2,
        "backgroundColor": "${backgroundMain}"
      },
      "backgroundColor": "${backgroundMain}"
    }
  }
}
